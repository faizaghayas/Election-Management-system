@model Vision_Project.Models.ElectionType
@{
    ViewBag.Title = "AddE_Type";
    Layout = "~/Views/shared/Adminlayout.cshtml";
}
<link href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">


<style>
    .card_info {
        width: 100%;
        box-shadow: #01324414 0px 0px 5px 0px,#01324414 0px 0px 1px 0px;
        background-color: #fff;
        border-radius: .4rem;
    }

    .create_btn {
        width: 100%;
        background-color: #bbdee9;
        color: #fff;
        font-weight: 700;
        font-size: 15px;
    }

        .create_btn:hover {
            background: #fff;
            border: 2px solid #bbdee9;
            color: #bbdee9;
        }

    .hd {
        text-align: left;
        font-size: 24px;
        color: #606060;
        font-weight: 600;
    }

        .hd::before {
            content: "";
            display: inline-block;
            width: .3rem;
            height: 1.6rem;
            border-radius: 2rem;
            background-color: #acd6e3;
            margin: 0rem 1rem;
            padding-bottom: 1.3rem;
            margin-bottom: -.3rem;
        }
</style>



<div class="col-6 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="hd">Type Details</h4>
            <br />
            @using (Html.BeginForm())
            { 
                @Html.AntiForgeryToken()
                <div class="form-sample">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Election Type</label>
                                <div class="col-sm-12">

                                    @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control", placeholder = "Type" } })
                                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                      
                    </div>
                    


                    <div class="row">
                        <div class="col-md-offset-2 col-md-12">
                            <input type="submit" value="Create" class="btn btn-default create_btn" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>