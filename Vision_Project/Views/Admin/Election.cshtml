@model IEnumerable<Vision_Project.Models.Election>
@{
    ViewBag.Title = "Election";
    Layout = "~/Views/shared/Adminlayout.cshtml";
}








<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Election</h4>
                <p class="card-description">

                </p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Starting Date</th>
                                <th>Ending Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Start_date)</td>
                                    <td>@Html.DisplayFor(modelItem => item.End_date)</td>

                                    <td> @(item.U_Status == 1 ? "Ongoing" : "Completed")</td>
                                    <td>
                                        @if (item.U_Status == 1)
                                        {
                                            <a href="@Url.Action("E_Status","Admin",new { id = item.Id})">
                                                <label class="badge badge-secondary">Completed</label></a>
                                        }
                                        else
                                        {
                                    <a href="@Url.Action("E_Status","Admin",new { id = item.Id})">
                                        <label class="badge badge-success">Ongoing</label>
                                      </a>
                                        }
                                    </td>
                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

















