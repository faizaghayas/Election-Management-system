<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="shortcut icon" href="~/Content/assets/images/election logo.png" type="image/x-icon" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <link href="style.css" rel="stylesheet">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');

        body {
            font-size: 0.875rem;
            padding-top: 0 !important;
        }

        * {
            font-family: "Poppins", sans-serif;
            font-weight: 300;
            font-style: normal;
        }

        .navbar {
            background-color: #fff;
            color: #fff;
            height: 2.6rem;
            box-shadow: #efeded 0px 3px 6px, #ffffff 0px 3px 6px;
        }

        .sidebar {
            width: 6.8rem;
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            z-index: 100;
            padding: 48px 0 0;
            box-shadow: #ede9e9 2.4px 2.4px 3.2px;
            background-color: #fff !important;
        }

        .sidebar-sticky {
            position: -webkit-sticky;
            position: sticky;
            top: 48px;
            height: calc(100vh - 48px);
            padding-top: .5rem;
            overflow-x: hidden;
            overflow-y: auto;
        }

        .nav-link.active {
            font-weight: bold;
            color: #007bff;
        }

        .card {
            margin-bottom: 1rem;
        }

        .card-title {
            font-size: .8rem;
            margin: 0;
            color: #777676;
            margin-top: .4rem;
        }

        .body_card {
            display: flex;
            align-items: start;
        }

        .container {
            margin-top: 2rem;
        }

        .d-flex {
            justify-content: space-between;
        }

        .card-text {
            font-size: .9rem;
            color: #222222;
            margin: 0;
            font-weight: 600;
            padding: .2rem 0;
        }

        .text_bold {
            font-size: .8rem;
            font-weight: bold;
            color: #a3a5a7;
        }

        .iconn {
            color: #acd6e3;
            ;
            font-size: 1.2rem;
            text-align: center;
        }

        .nav-link, .nav-link.active {
            text-align: center;
            padding-top: 1rem;
            color: #a3a5a7;
        }

        @@media (min-width: 576px) {
            .ml-sm-auto, .mx-sm-auto {
                margin-left: 5rem !important;
            }
        }

        .card_color {
            width: 20rem !important;
            background-color: #fafafa;
            margin: .7rem;
            border-radius: .3rem;
            padding: .7rem 1.4rem;
        }

        .roww {
            align-items: center;
            justify-content: center;
        }
        success:focus {
        box-shadow:none !important;
        }
            .span_iconn {
            width: 3.2rem;
            height: 3.2rem;
            background-color: #85cd98;
            border-radius: 50%;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            margin: 0 1rem;
        }

            .span_iconn .iconn {
                color: white;
                font-size: 1.2rem;
            }

        .table-responsive {
            margin-top: 1rem;
        }

        .table td, .table th {
            vertical-align: middle;
        }

        .badge-onboarded {
            background-color: #28a745;
            color: white;
        }

        .nav-link {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        .sidebar {
            padding: 0px 0 0;
        }
    </style>
</head>
<body>
  
    <nav class="navbar navbar-dark">
        <a class="navbar-brand" href="#"></a>
        <a class="navbar-text" href="#">
           
         
        </a>
    </nav>


    <div class="container-fluid">
        <div class="row roww">
            <nav class="col-md-2 d-none d-md-block bg-light sidebar">
                <div class="h-16 mt-[5px] w-full px-8 flex items-center mx-auto py-4">
                    <img style=" margin-left: 1.6rem;" class="rounded-circle" src="~/content/assets/images/election logo.png" width="55px" />
                    @*<h5 style="color: #222222b8; font-size: .9rem; font-weight: 300; line-height: 1.4rem; padding: 0 .7rem; letter-spacing: .1rem; ">CITIZEN<br />CHOICE</h5>*@
                </div>
                <div class="sidebar-sticky">

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Index","Home")">
                                <i class="fas fa-home iconn"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("VoterRegister","Home")">
                                <i class="fas fa-user iconn"></i> Voter Registration
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Voting","Home")">
                                <i class="fas fa-box iconn"></i> Voting
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Results","Home")">
                                <i class="fas fa-chart-bar iconn"></i> Results
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout","Account")">
                                <i class="fas fa-chart-bar iconn"></i> Logout
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Settings","Home")">
                                <i class="fas fa-cogs iconn"></i> Settings
                            </a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Settings","Home")">
                                <i class="fas fa-user iconn"></i>
                            </a>
                        </li>*@
                    </ul>
                </div>
            </nav>
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">

                @RenderBody()

            </main>
        </div>
    </div>


    <script src="~/Content/assets/scripts/sweetalert.min.js"></script>

    @if (TempData["SucessMessage"] != null)
    {
        <script>
 swal({
                title: "@TempData["SucessMessage"]", icon: "success", button: "ok!",
            })</script>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <script>
swal({
               title: "@TempData["WarningMessage"]", icon: "warning", button: "ok!",
           })</script>
    }
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('myChart').getContext('2d');
        var chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
                datasets: [{
                    label: 'Performance',
                    backgroundColor: '#85cd98',
                    borderColor: '#85cd98',
                    data: [0, 10, 5, 2, 20, 30, 45]
                }]
            },
            options: {}
        });
    </script>
</body>
</html>
