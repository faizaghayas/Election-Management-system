
@{
    ViewBag.Title = "Results";
    Layout = "~/Views/shared/_PartyLayout.cshtml";
}

@model IEnumerable<Vision_Project.Models.CandidateVoteResult>

@if (Model.Any())
{

    <div class="row">
        <div class="col-lg-8 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">User Positions</h4>
                    <p class="card-description">

                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    
                                    <th>Name</th>
                                    <th>Vote Count</th>
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CandidateName</td>
                                        <td>@item.VoteCount</td>
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>





}

else
{
    <p>No results available for the specified party.</p>
}
